<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginTop="4dp"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:layout_constraintTop_toTopOf="parent"
            app:titleTextColor="@color/white"
            tools:layout_editor_absoluteX="1dp" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/tex_Sig"
                android:textColor="@color/white"
                android:textSize="24dp" />


        </androidx.appcompat.widget.Toolbar>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tex_fullname"
                    android:textSize="15dp"
                    android:textColor="@color/purple_500"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="6dp"/>

                <EditText
                    android:id="@+id/editTextTextPersonName"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginHorizontal="20dp"
                    android:background="@drawable/style_stroke"
                    android:hint="@string/tex_yourname"
                    android:inputType="textPersonName"
                    android:minHeight="48dp"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/tex_Username"
                    android:textSize="15dp"
                    android:textColor="@color/purple_500"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="4dp"/>

                <EditText
                    android:id="@+id/editTextTextPersonName2"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginHorizontal="20dp"
                    android:background="@drawable/style_stroke"
                    android:ems="10"
                    android:hint="@string/tex_Username"
                    android:inputType="textPersonName"
                    android:minHeight="48dp"
                    android:textSize="12dp" />
                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/tex_mail"
                    android:textSize="15dp"
                    android:textColor="@color/purple_500"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="4dp"/>

                <EditText
                    android:id="@+id/editTextTextPersonName3"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginHorizontal="20dp"
                    android:background="@drawable/style_stroke"
                    android:ems="10"
                    android:hint="@string/tex_Email"
                    android:inputType="textPersonName"
                    android:minHeight="48dp"
                    android:textSize="12dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/tex_Password"
                    android:textSize="15dp"
                    android:textColor="@color/purple_500"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="4dp"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:endIconMode="password_toggle">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:background="@drawable/style_stroke"
                        android:hint="@string/tex_YouPassword"
                        android:inputType="textPassword" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/tex_repeatpassword"
                    android:textSize="15dp"
                    android:textColor="@color/purple_500"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="4dp"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:endIconMode="password_toggle">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:background="@drawable/style_stroke"
                        android:hint="@string/tex_YouPassword"
                        android:inputType="textPassword" />
                </com.google.android.material.textfield.TextInputLayout>


            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center_horizontal"
            android:orientation="horizontal">
            <Button
                android:id="@+id/googlebutton"
                android:layout_width="117dp"
                android:layout_height="65dp"
                android:layout_marginRight="20dp"
                android:backgroundTint="#F2D6D6D3"
                android:drawableLeft="@drawable/common_google_signin_btn_icon_light"
                android:onClick="logeogoogle"
                android:text="Google"
                android:textColor="@color/black"
                android:textSize="10dp"
                app:cornerRadius="20dp"/>

            <Button
                android:id="@+id/facebookbutton"
                android:layout_width="114dp"
                android:layout_height="65dp"
                android:layout_marginRight="20dp"
                android:backgroundTint="#3F51B5"
                android:onClick="logeofacebook"
                android:textSize="10dp"
                app:cornerRadius="20dp"
                app:icon="@drawable/com_facebook_button_icon"
                tools:text="Facebook" />

            <Button
                android:id="@+id/buttonlogin"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:onClick="guardar"
                android:text="@string/tex_Sig"
                android:textSize="15dp"
                app:cornerRadius="20dp" />

        </LinearLayout>



    </LinearLayout>

</LinearLayout>