<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".welcomActivity"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_barradestinos"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/purple_200"
        android:elevation="8dp"
        app:logo="@drawable/logo"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:title="@string/app_name"
        app:titleTextColor="@color/white"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="16dp"
        android:background="@drawable/style_land"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="30dp"
                android:text="@string/tex_our"
                android:textColor="@color/white"
                android:textSize="25dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:text="@string/tex_Destinations"
                android:textColor="@color/white"
                android:textSize="35dp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical"
        android:layout_margin="16dp"
        android:gravity="center">


        <Button
            android:layout_width="270dp"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="#2D2D82"
            android:elevation="15dp"
            android:onClick="basedatos"
            android:text="@string/tex_bog"
            android:textSize="30dp"
            app:cornerRadius="10dp" />

        <Button
            android:layout_width="270dp"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="#6974A1"
            android:elevation="15dp"
            android:onClick="basedatos"
            android:text="@string/tex_med"
            android:textSize="30dp"
            app:cornerRadius="10dp" />

        <Button
            android:layout_width="270dp"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="#2D2D82"
            android:elevation="15dp"
            android:onClick="basedatos"
            android:text="@string/tex_cart"
            android:textSize="30dp"
            app:cornerRadius="10dp" />

        <Button
            android:layout_width="270dp"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="#6974A1"
            android:elevation="15dp"
            android:onClick="basedatos"
            android:text="@string/tex_cali"
            android:textSize="30dp"
            app:cornerRadius="10dp" />
    </LinearLayout>

</LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab4a"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="30dp"
        android:backgroundTint="#F65050"
        android:onClick="basedatos"
        android:src="@android:drawable/ic_menu_search" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>
